{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}
{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
            <h1>Se connecter</h1>

        <form action="{{ path('app_login') }}" method="post">
        <!-- Email input -->
        <div class="form-group">
            <label class="form-label" for="username">Email</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
        </div>

        <!-- Password input -->
        <div class="form-group">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="_password"/>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div>
            </div>

            <div class="col">
            <!-- Simple link -->
            <a href="http://mdl/reset-password" >Mot de passe oublier ?</a>
            </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4" href="http://maisondesligues.fr/">Se connecter</button>
        {# <button type="button" class="btn btn-primary btn-block mb-4">Sign in</button> #}

        <!-- Register buttons -->
        <div class="text-center">
            <p>Pas encore Inscrit? <a href="inscription">Inscription</a></p>
        </div>
        </form>
</div>









        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}


{% endblock %}