{% block cadre %}
    <center>
        <div class="card w-75 " style=" background: rgba(255, 255, 255, 0.7);
             position: relative; margin:  3% 12.5%;{# z-index: 9999#}">
            <div class="card-header">
                CONGRÈS DE LA FÉDÉRATION FRANÇAISE D'ESCRIME
            </div>
            <div class="card-body">
                <h5 class="card-title">du 28 septembre 2023 au 29 septembre 2023</h5>
                <div class="container">
                    <div class="row">
                        {% set cpt_atelier = null  %} 
                        {% for atelier in ateliers %} 
                            {% if loop.index % 3 == 1 %}
                                <div class="row">
                                {% endif %}
                                <div class="card col-md" style="width: 18rem; margin: 0 10px">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ atelier.libelle }}</h5>
                                        <h6 class="card-subtitle mb-2 ">{{ vacations[atelier.id - 1].DateHeureDebut|date('d/m/Y H:i') }} - {{  vacations[atelier.id - 1].DateHeureFin|date('d/m/Y H:i')}}</h6>
                                        <p class="card-text text-muted"> Nombre de places :{{ atelier.nbplaces }}</p>
                                        <p class="card-title">thèmes: </p>
                                        {% for theme in atelier.theme %}      
                                            <p> - {{ theme.libelle }}</p>
                                        {%  endfor %}
                                    </div>
                                </div>
                                {% if loop.index % 3 == 0 %}
                                </div>
                            {% endif %}
                            {% set cpt_atelier= loop.index %}
                        {% endfor %} 
                        {% if cpt_atelier  % 3 != 0 %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </center>
{% endblock %}